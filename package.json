{
	"name": "reviewer-lottery",
	"version": "0.0.0",
	"private": true,
	"description": "Automatically assign reviewers to Pull Requests",
	"main": "lib/main.js",
	"scripts": {
		"build": "tsc",
		"format": "biome format --write",
		"format-check": "biome format",
		"lint": "biome check",
		"lint-fix": "biome check --write",
		"pack": "tsup",
		"test": "jest",
		"all": "pnpm run build && pnpm run format && pnpm run lint && pnpm run pack && pnpm test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fan-k-tamura/reviewer-lottery.git"
	},
	"keywords": [
		"actions",
		"node",
		"setup"
	],
	"author": "fan-k-tamura",
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^1.9.1",
		"@actions/github": "^6.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@types/jest": "^29.5.1",
		"@types/js-yaml": "^4.0.5",
		"@types/nock": "^11.1.0",
		"@types/node": "^20.0.0",
		"jest": "^29.5.0",
		"js-yaml": "^4.1.0",
		"nock": "^13.3.1",
		"ts-jest": "^29.1.0",
		"tsup": "^8.5.0",
		"typescript": "^5.0.4"
	}
}
